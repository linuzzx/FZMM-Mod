<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label id="title">
                    <positioning type="absolute">20,20</positioning>
                    <text translate="true">fzmm.gui.title.imagetext</text>
                </label>

                <scroll direction="vertical">

                    <flow-layout direction="vertical" id="options-list">
                        <children>
                            <image-rows>
                                <buttonId>image</buttonId>
                                <enumId>imageSourceType</enumId>
                            </image-rows>
                            <slider-row>
                                <id>width</id>
                                <tooltipId>resolution</tooltipId>
                            </slider-row>
                            <slider-row>
                                <id>height</id>
                                <tooltipId>resolution</tooltipId>
                            </slider-row>
                            <text-box-row>
                                <id>characters</id>
                            </text-box-row>
                            <boolean-row>
                                <id>preserveImageAspectRatio</id>
                            </boolean-row>
                            <boolean-row>
                                <id>showResolution</id>
                            </boolean-row>
                            <boolean-row>
                                <id>smoothImage</id>
                            </boolean-row>
                            <screen-tab-row>
                                <id>tabs</id>
                            </screen-tab-row>

                            <screen-tab>
                                <id>lore</id>
                                <children>
                                    <enum-row>
                                        <id>loreMode</id>
                                    </enum-row>
                                </children>
                            </screen-tab>

                            <screen-tab>
                                <id>bookPageMode</id>
                                <children>
                                    <enum-row>
                                        <id>bookPageMode</id>
                                    </enum-row>
                                </children>
                            </screen-tab>

                            <screen-tab>
                                <id>bookTooltip</id>
                                <children>
                                    <enum-row>
                                        <id>bookTooltipMode</id>
                                    </enum-row>
                                    <text-box-row>
                                        <id>bookTooltipAuthor</id>
                                    </text-box-row>
                                    <text-box-row>
                                        <id>bookTooltipMessage</id>
                                    </text-box-row>
                                </children>
                            </screen-tab>

                            <screen-tab>
                                <id>hologram</id>
                                <children>
                                    <number-row>
                                        <id>hologramPosX</id>
                                        <tooltipId>hologramPos</tooltipId>
                                    </number-row>
                                    <number-row>
                                        <id>hologramPosY</id>
                                        <tooltipId>hologramPos</tooltipId>
                                    </number-row>
                                    <number-row>
                                        <id>hologramPosZ</id>
                                        <tooltipId>hologramPos</tooltipId>
                                    </number-row>
                                </children>
                            </screen-tab>

                            <screen-tab>
                                <id>json</id>
                                <children>
                                </children>
                            </screen-tab>
                        </children>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <vertical>30</vertical>
                    </margins>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="execute-button">
                            <text translate="true">fzmm.gui.button.execute</text>

                            <margins>
                                <left>20</left>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                        <button id="preview-button">
                            <text translate="true">fzmm.gui.button.preview</text>

                            <margins>
                                <left>4</left>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">0,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back</text>

                            <margins>
                                <right>20</right>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </flow-layout>
            </children>


            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>